{
  "name": "stylelint-config-wordpress",
  "version": "8.0.0",
  "description": "WordPress shareable config for stylelint",
  "keywords": [
    "code",
    "code style",
    "css",
    "lint",
    "linter",
    "linting",
    "stylelint",
    "stylelint-config",
    "stylelint-config-wordpress",
    "validate",
    "wordpress",
    "WordPress"
  ],
  "author": "Stylelint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ntwb/stylelint-config-wordpress.git"
  },
  "homepage": "https://github.com/ntwb/stylelint-config-wordpress",
  "bugs": "https://github.com/ntwb/stylelint-config-wordpress/issues",
  "main": "index.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "index.js"
  ],
  "engines": {
    "node": ">=4.2.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "eslint": "^3.0.0",
    "eslint-config-stylelint": "^4.0.0",
    "eslint-plugin-ava": "^2.2.1",
    "npm-run-all": "^3.1.0",
    "npmpub": "^3.0.3",
    "remark-cli": "^2.0.0",
    "remark-preset-lint-consistent": "^1.0.0",
    "remark-preset-lint-recommended": "^1.0.0",
    "stylelint": "^7.2.0"
  },
  "peerDependencies": {
    "stylelint": "^7.2.0"
  },
  "scripts": {
    "ava": "ava --verbose \"__tests__/**/*.js\"",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub --verbose",
    "test": "npm run ava"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "ava"
    ],
    "extends": [
      "stylelint",
      "plugin:ava/recommended"
    ]
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
